# ========================================
# CONFIGURACIÓN DE ENTORNO
# ========================================
# Valores posibles: local, development, production, testing
FLASK_ENV=local

# ========================================
# CONFIGURACIÓN GENERAL
# ========================================
SECRET_KEY=your-secret-key-here
JWT_KEY=your-jwt-secret-key-here
ALGORITHM=HS256
EXPIRES_TOKEN_SESSION=1440
EXPIRES_TOKEN_EMAIL=30

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
# Para entorno local (SQLite - por defecto)
# DATABASE_URL=sqlite:///instance/local_database.db

# Para entorno de desarrollo (PostgreSQL local)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/softbee_dev

# Para entorno de producción (PostgreSQL remoto)
# DATABASE_URL=postgresql://user:password@host:port/database

# ========================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# ========================================
# URLs DE LA APLICACIÓN
# ========================================
FRONTEND_URL=http://localhost:3000
BASE_URL=http://localhost:5000

# ========================================
# CONFIGURACIÓN DE POSTGRESQL (Solo si usas PostgreSQL)
# ========================================
PGUSER=postgres
PGPASSWORD=postgres
PGHOST=localhost
PGPORT=5432
PGDATABASE=softbee
SSL_MODE=